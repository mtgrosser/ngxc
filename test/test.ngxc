ngxc_info

include_dir 'includes'

user 'nginx'
worker_processes 'auto'

error_log '/var/logs/nginx/error.log'
pid       '/run/nginx.pid'

events {
  worker_connections 1024
}

http {
  include!     '/etc/nginx/mime.types'
  default_type 'application/octet-stream'

  passenger_default_ruby '/opt/bin/ruby'

  include_dir 'sites'
  
  return! '404'
  break!
}
